{
  "name": "hn-core-frontend",
  "workspaces": [
    "microweb/*",
    "npm/packages/*",
    "web"
  ],
  "version": "1.0.0",
  "description": "Felles frontendpakker for Helsenorge",
  "main": "index.js",
  "scripts": {
    "validate": "npm-run-all typecheck prettier eslint stylelint",
    "prettier": "lerna run prettier",
    "prettier:fix": "lerna run prettier:fix",
    "eslint": "lerna run eslint",
    "eslint:fix": "lerna run eslint:fix",
    "stylelint": "lerna run stylelint",
    "stylelint:fix": "lerna run stylelint:fix",
    "typecheck": "lerna run typecheck",
    "test": "lerna run test --concurrency=1",
    "build": "lerna run build",
    "version:latest": "lerna version",
    "version:beta": "lerna version --preid=beta --allow-branch=feature/roxdev --force-publish=*",
    "version:alpha": "lerna version --preid=alpha --allow-branch=feature/roxdev --force-publish=*",
    "publish:latest": "lerna publish from-git --yes",
    "publish:from-package": "lerna publish from-package --yes",
    "publish:beta": "lerna publish from-git --dist-tag=beta --yes",
    "publish:beta-package": "lerna publish from-package --dist-tag=beta",
    "publish:alpha": "lerna publish from-git --dist-tag=alpha",
    "publish:alpha-package": "lerna publish from-package --dist-tag=alpha",
    "clean:npm": "npm-run-all clean:packages clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rimraf node_modules",
    "audit": "npm audit --registry=https://registry.npmjs.org --audit-level=moderate --package-lock-only",
    "prepare": "lerna link && husky install",
    "precommit-script": "pretty-quick --staged",
    "postversion": "npm run changelog",
    "changelog": "conventional-changelog --config changelog.config.cjs --infile CHANGELOG.md --same-file --release-count 0 --skip-unstable --tag-prefix v --outputUnreleased false",
    "postchangelog": "git commit --include CHANGELOG.md -m \"docs: oppdater CHANGELOG\"",
    "coverage:combined": "node ./scripts/aggregate-packages-coverage.cjs && nyc report --reporter lcov"
  },
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/nhnfelles/Helsenorge/_git/HN-Core-Frontend"
  },
  "author": "Norsk helsenett SF",
  "maintainers": [
    "ROX"
  ],
  "license": "ISC",
  "dependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "conventional-changelog-cli": "2.2.2",
    "husky": "8.0.3",
    "lerna": "6.6.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "rimraf": "5.0.1"
  },
  "private": true,
  "overrides": {
    "react-dates": {
      "react": ">=17.0.0",
      "react-dom": ">=17.0.0"
    },
    "nwsapi": "2.2.2"
  },
  "engineStrict": true,
  "engines": {
    "node": "^18.0.0",
    "npm": "^9.0.0"
  }
}
