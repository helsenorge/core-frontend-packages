{
  "extends": "./node_modules/@helsenorge/core-build/config/tsconfig.global.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "jsx": "react",
    "rootDir": "./src",
    "noEmit": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "./lib",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["**/__devonly/**"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
