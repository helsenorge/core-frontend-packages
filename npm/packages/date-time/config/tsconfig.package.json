{
  "extends": "../node_modules/@helsenorge/core-build/config/tsconfig.global.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "../lib",
    "rootDir": "../src",
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./src",
    "noEmit": false,
    "paths": {
      "HNResources": ["types/Resources.d.ts"],
      "HNEntities/*": ["types/*"],
      "HNEnums/*": ["types/*"]
    }
  },

  "include": ["../src/**/*.tsx", "../src/**/*.ts"],
  "exclude": ["../src/**/*test*", "../src/**/*spec*", "**/test.tsx", "./**/test.tsx", "./**/**/test.tsx"]
}
